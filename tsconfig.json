{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,

    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],

    "strict": true,
    "strictPropertyInitialization": false,

    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "exclude": ["scripts"]
}
